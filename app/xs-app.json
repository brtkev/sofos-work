{
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/app/(.*)$",
      "target": "$1",
      "localDir": ".",
      "authenticationType": "xsuaa"
    },
    {
      "source": "^/(.*)$",
      "target": "$1",
      "destination": "srv-api",
      "authenticationType": "basic",
      "scope": "$XSAPPNAME.Employee"
    }
  ],
  "cors":[
    {
      "uriPattern": "^/(.*)$",
      "allowedMethods": [
        "GET", "POST"
      ],
      "allowedOrigin": [
        {
          "host": "*",
          "protocol": "https"
        }
      ],
      "maxAge": 3600,
      "allowedHeaders": [
        "Authorization",
        "Content-Type"
      ],
      "allowedCredentials": true
    }
  ] 
}