{
  "name": "petition-api",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/audit-logging": "^5.0.0",
    "@sap/cds": "^6",
    "@sap/xsenv": "^3.1.0",
    "@sap/xssec": "^3.2.0",
    "cors": "^2.8.5",
    "express": "^4",
    "hdb": "^0.19.5",
    "passport": "^0.4.1"
  },
  "devDependencies": {
    "@sap/hdi-deploy": "4.5.1",
    "sqlite3": "^5.0.4"
  },
  "cds": {
    "requires": {
      "uaa":{
        "kind": "xsuaa"
      },
      "db": {
        "[production]":{
          "kind":"hana"
        },
        "[development]" :{
          "kind":"sqlite"
        }
        
      },
      "auth": {
        "[production]":{
          "strategy" : "JWT"
        },
        "[development]" :{
          "strategy": "mock",
          "users":{
            "joe":{
              "roles": [
                "Employee"
              ]
            },
            "julie":{
              "roles": [
                "Employee"
              ]
            },
            "bob":{
              "roles": [
                "Employee",
                "Manager"
              ]
            }
          }
        }
      },
      "approuter": {
        "kind": "cloudfoundry"
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "scripts": {
    "start": "cds run"
  }
}